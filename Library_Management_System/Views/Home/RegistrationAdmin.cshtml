@model Library_Management_System.Models.DTO.UserRegistrationModel

<!DOCTYPE html>
<html lang="en">
<head>
    <script>
        function RegistrationAdmin() {
            var Data = {};
            Data.Username = $("#Username").val();
            Data.Email = $("#Email").val();
            Data.phonenumber = $("#Phonenumber").val();
            Data.password = $("#Password").val();
            $.ajax({
                url: "/Home/RegistrationAdmin/",
                method: "POST",
                dataType: 'json',
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                data: Data,
            });
        }
    </script>
</head>
<body class="fix-menu">
    <form class="md-float-material">
        <div class="auth-box">
            <div class="row m-b-20">
                <div class="col-md-12">
                    <h3 class="text-center txt-primary">Registration for Admin</h3>
                </div>
            </div>
            <hr />
            <div class="input-group">
                @Html.TextBoxFor(m => m.Username, new { placeholder = "Choose Username", @class = "form-control", @required = "required" })
                <span class="md-line"></span>
            </div>
            <div class="input-group">
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Your Email Address", @class = "form-control", @required = "required" })
                <span class="md-line"></span>
            </div>
            <div class="input-group">
                @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "Your Phonenumber", @class = "form-control", @required = "required" })
                <span class="md-line"></span>
            </div>
            <div class="input-group">
                @Html.PasswordFor(m => m.Password, new { placeholder = "Choose Password", @class = "form-control", @required = "required" })
                <span class="md-line"></span>
            </div>
            <div class="row m-t-30">
                <div class="col-md-12">
                    <button type="button" onclick="RegistrationAdmin()" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20">REGISTER</button>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-10">
                    <p class="text-inverse text-left m-b-0">Thank you and enjoy our website.</p>
                </div>
            </div>
        </div>
    </form>
</body>
</html>

